<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="details-container">
      <div class="details-pokemon-card">
        <div class="details-name-picture">
          <div class="details-image"><img src="<%= pokemonName.img %>" /></div>
          <form action="/index/<%= id %>?_method=PUT" method="post">
            <label for="pokemon-type">
              <input type="text" name="name" value="<%= pokemonName.name %>" class="details-name" id="name-editing-field"/>
            </label>
          </div>
          <div class="details-type">

            <label>
              Type:
              <select name="type[0]">
                <option value="null">&nbsp;</option>
                <option value="Normal">Normal</option>
                <option value="Fire">Fire</option>
                <option value="Water">Water</option>
                <option value="Grass">Grass</option>
                <option value="Electric">Electric</option>
                <option value="Ice">Ice</option>
                <option value="Fighting">Fighting</option>
                <option value="Poison">Poison</option>
                <option value="Ground">Ground</option>
                <option value="Flying">Flying</option>
                <option value="Psychic">Psychic</option>
                <option value="Bug">Bug</option>
                <option value="Rock">Rock</option>
                <option value="Ghost">Ghost</option>
                <option value="Dragon">Dragon</option>
                <option value="Dark">Dark</option>
                <option value="Steel">Steel</option>
                <option value="Fairy">Fairy</option>
              </select>
            </label>
            <label>
              <select name="type[1]">
                <option value="null">&nbsp;</option>
                <option value="Normal">Normal</option>
                <option value="Fire">Fire</option>
                <option value="Water">Water</option>
                <option value="Grass">Grass</option>
                <option value="Electric">Electric</option>
                <option value="Ice">Ice</option>
                <option value="Fighting">Fighting</option>
                <option value="Poison">Poison</option>
                <option value="Ground">Ground</option>
                <option value="Flying">Flying</option>
                <option value="Psychic">Psychic</option>
                <option value="Bug">Bug</option>
                <option value="Rock">Rock</option>
                <option value="Ghost">Ghost</option>
                <option value="Dragon">Dragon</option>
                <option value="Dark">Dark</option>
                <option value="Steel">Steel</option>
                <option value="Fairy">Fairy</option>
              </select>
            </label>
          </div>
          <div class="details-stats">
            <div class="stats-row">
              <div class="stats-names">HP</div>
              <input type="number" name="stats.hp" value="<%= pokemonName.stats.hp %>"></div>
            
            <div class="stats-row">
              <div class="stats-names">Attack</div>
              <input type="number" name="stats.attack" value="<%= pokemonName.stats.attack %>"></div>
            
            <div class="stats-row">
              <div class="stats-names">Defense</div>
              <input type="number" name="stats.defense" value="<%= pokemonName.stats.defense %>"></div>
            
            <div class="stats-row">
              <div class="stats-names">Special Attack</div>
              <input type="number" name="stats.spattack" value="<%= pokemonName.stats.spattack %>"></div>
            
            <div class="stats-row">
              <div class="stats-names">Special Defense</div>
              <input type="number" name="stats.spdefense" value="<%= pokemonName.stats.spdefense %>"></div>
            
            <div class="stats-row">
              <div class="stats-names">Speed</div>
              <input type="number" name=stats.speed value="<%= pokemonName.stats.speed %>"></div>
            
          </div>
          <div class="buttons-container">
            <div id="cancel">
              <a href="/index/<%= id %>">cancel</a>
            </div>

            <input type="submit" value="Update" id="update" />
          </div>
          </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
